<view data-event-opts="{{[['tap',[['editStatement',['id','$0'],['bill.id']]]]]}}" class="bill" bindtap="__e"><view class="information"><view class="icon"><image src="{{bill.categoryIconPath}}"></image></view><view class="st-title"><block wx:if="{{bill.type==='expend'||bill.type==='income'}}"><view class="title">{{bill.categoryName}}</view></block><block wx:if="{{bill.type==='transfer'||bill.type==='repayment'}}"><view class="title">{{(bill.type==='transfer'?'[转账]':'[还款]')+bill.assetName+"->"+bill.targetAssetName+''}}</view></block><block wx:if="{{bill.description}}"><view class="description">{{bill.description}}</view></block><view class="time">{{bill.year+"-"+bill.month+"-"+bill.day+" "+bill.time+" · "+bill.assetName}}</view></view></view><view class="{{['amount',bill.type]}}">{{''+bill.amount+''}}</view></view>