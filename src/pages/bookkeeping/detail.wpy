<script>
import wepy from 'wepy'
import tip from '@/utils/tip'
export default class Detail extends wepy.page {
  config = {
    navigationBarTitleText: '账单详情'
  }
  data = {
    id: 0,
    statement:
    {
      id: 1,
      category: '生活-数码',
      categoryIcon: '',
      categoryTitle: '数码',
      description: '买电脑',
