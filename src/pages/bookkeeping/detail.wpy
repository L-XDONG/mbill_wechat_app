      residue: -400,
      type: 'expend',
      location: '广东广州白云区',
      amount: 300
    }
  }
  onLoad (options) {
    this.id = options.id
    if (this.id === undefined) {
      wepy.navigateBack({
        delta: 1
      })
    }
  }
  methods = {
    async handlerDel() {
      await tip.confirm('是否删除该条账单？', {}, '提示')
      console.log('删除')
    },
    handlerEdit() {
      wepy.navigateTo({
        url: `/pages/bookkeeping/edit?id=${this.id}`
      })
    }
  }
}
</script>
